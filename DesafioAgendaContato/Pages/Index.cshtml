@page
@model IndexModel
@{
    ViewData["Title"] = "Agenda Contato";
}

<div class="text-center">
    <div class="row">
        <div class="col-sm-12 text-right"><a class="btn btn-primary" href="Create">Novo</a></div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">E-mail</th>
                    <th>Opções</th>
                </tr>
            </thead>
            @if (Model != null && Model.Contatos.Any())
            {

                <tbody>
                    @foreach (var item in Model.Contatos)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Nome</td>
                            <td>@item.Telefone</td>
                            <td>@item.Email</td>
                            <td>
                                @*<a asp-page="Delete" asp-route-id="@item.Id" onclick="return confirm('Confirmar?');" class="btn btn-danger btn-sm text-white">Excluir</a>*@
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Editar</a>
                            </td>

                        </tr>
                    }
                </tbody>
             }
        </table>
    </div>
</div>
